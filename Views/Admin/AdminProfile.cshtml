@model BookStore.Models.Admin

@{
    ViewBag.Title = "Profile";
    Layout = "~/Views/Shared/Admin/_SideNav.cshtml";
}

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Your Profile</h2>
        <a href="@Url.Action("Edit", "Admin", new { id = Model.Id })" class="btn btn-primary">Edit Profile</a>
    </div>

    <div class="row">
        <!-- Left Card -->
        <div class="col-md-4 mb-4">
            <div class="card p-4 text-center shadow-sm">
                @*<img src="~/images/default-profile.png" class="rounded-circle mx-auto mb-3" width="120" height="120" />*@
                <h4 class="mb-0">@Model.FirstName </h4>
                <small class="text-muted">@Model.Position</small>
                <hr />
                <p class="mb-1"><i class="fas fa-envelope me-2"></i>@Model.Email</p>
            </div>
        </div>

        <!-- Right Card -->
        <div class="col-md-8">
            <div class="card p-4 shadow-sm">
                <h5 class="mb-3">Personal Information</h5>
                <div class="row mb-3">
                    <div class="col-md-6">
                        <strong>First Name:</strong><br />
                        @Model.FirstName
                    </div>
                    <div class="col-md-6">
                        <strong>Email:</strong><br />
                        @Model.Email
                    </div>

                </div>
                

                <h5 class="mb-3">Work Information</h5>
                <div class="row mb-3">
                    <div class="col-md-6">
                        <strong>Department:</strong><br />
                        @Model.Department
                    </div>
                    <div class="col-md-6">
                        <strong>Position:</strong><br />
                        @Model.Position
                    </div>
                </div>
                <div class="row mb-4">
                    <div class="col-md-6">
                        <strong>Join Date:</strong><br />
                        @Model.JoinDate
                    </div>
                   
                </div>

                <h5 class="mb-2">Bio</h5>
                <p class="text-muted">Experienced administrator with a passion for efficient management and process optimization.</p>
            </div>
        </div>
    </div>
</div>