@model BookStore.Models.Admin

@{
    ViewBag.Title = "Admin Profile";
    Layout = "~/Views/Shared/Admin/_SideNav.cshtml";
}

<style>
    body[data-bs-theme="light"] {
        background-color: #f5f5f5;
        color: #000;
    }

        .profile-info {
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            padding: 30px;
            transition: background-color 0.3s, color 0.3s;
      
        }
    .profile-card {
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        padding: 30px;
        text-align: center;
        transition: background-color 0.3s, color 0.3s;
    }

    
    .profile-card h4 {
        font-size: 24px;
        font-weight: 600;
        margin-bottom: 5px;
    }

    .profile-card small {
        font-size: 14px;
    }

    .profile-info h5 {
        font-size: 18px;
        font-weight: 600;
        margin-bottom: 20px;
    }

    .profile-info p {
        margin-bottom: 10px;
    }
</style>


<div class="container ">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Admin Profile</h2>
        <a href="@Url.Action("EditAdminProfile", "Admin", new { id = Model.Id })" class="btn btn-primary">Edit Profile</a>
    </div>

    <div class="row">
        <!-- Left Card -->
        <div class="col-md-4 mb-4">
            <div class="profile-card">
                <h4>@Model.Account.Username</h4>
                <small>@Model.Position</small>
                <hr />
                <p><i class="fas fa-envelope me-2"></i>@Model.Email</p>
            </div>
        </div>

        <!-- Right Card -->
        <div class="col-md-8">
            <div class="profile-info">
                <h5>Personal Information</h5>
                <div class="row mb-3">
                    <div class="col-md-6">
                        <strong>First Name:</strong><br />
                        @Model.Account.Username
                    </div>
                    <div class="col-md-6">
                        <strong>Email:</strong><br />
                        @Model.Email
                    </div>
                </div>

                <h5>Work Information</h5>
                <div class="row mb-3">
                    <div class="col-md-6">
                        <strong>Department:</strong><br />
                        Administration
                    </div>
                    <div class="col-md-6">
                        <strong>Position:</strong><br />
                        Admin
                    </div>
                </div>
                <div class="row mb-4">
                    <div class="col-md-6">
                        <strong>Join Date:</strong><br />
                        @Model.JoinDate
                    </div>
                </div>

                <h5>Bio</h5>
                <p class="text-muted">Experienced administrator with a passion for efficient management and process optimization.</p>
            </div>
        </div>


    </div>
</div>
