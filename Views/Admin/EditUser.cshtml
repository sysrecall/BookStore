@model BookStore.Models.User

@{
    ViewBag.Title = "EditUser";
    Layout = "~/Views/Shared/Admin/_SideNav.cshtml";
}

<style>
    .edit-user-container {
        min-height: 80vh;
        display: flex;
        justify-content: center;
        align-items: flex-start;
        padding-top: 50px;
    }

    .card {
        width: 100%;
        max-width: 800px;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .card-title {
        font-weight: bold;
        margin-bottom: 20px;
    }

    .card-body {
        display: flex;
        flex-direction: column;
        align-items: center;
        padding: 10px;
    }

    .mb-3 {
        width: 100%;
        max-width: 400px; /* Adjusted to match the input width in the image */
    }

    .form-label {
        font-weight: 500;
        margin-bottom: 5px;
    }

    .form-control {
        border-radius: 5px;
        border: 1px solid #ced4da;
        padding: 10px;
        font-size: 1rem;
    }

    .btn-primary {
        background-color: #007bff;
        border: none;
        border-radius: 5px;
        padding: 10px;
        font-size: 1rem;
        font-weight: 500;
    }

        .btn-primary:hover {
            background-color: #0056b3;
        }

    .btn-link {
        color: #007bff;
        text-decoration: none;
        font-size: 0.9rem;
    }

        .btn-link:hover {
            text-decoration: underline;
        }

    .text-center-container {
        justify-content: center;
        padding-bottom: 20px; 
    }
</style>

<div class="edit-user-container">
    <div class="card shadow-lg">
        <h3 class="card-title text-center mt-4">Edit User</h3>

        <div class="card-body">
            @using (Html.BeginForm("EditUser", "Admin", FormMethod.Post))
            {
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.ID)

                <div class="mb-3">
                    @Html.LabelFor(model => model.Account.Username, new { @class = "form-label" })
                    @Html.TextBoxFor(model => model.Account.Username, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Account.Username, "", new { @class = "text-danger" })
                </div>

                <div class="mb-3">
                    @Html.LabelFor(model => model.Account.PasswordHash, new { @class = "form-label" })
                    @Html.TextBoxFor(model => model.Account.PasswordHash, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Account.PasswordHash, "", new { @class = "text-danger" })
                </div>

                <div class="mb-3">
                    @Html.LabelFor(model => model.FullName, new { @class = "form-label" })
                    @Html.TextBoxFor(model => model.FullName, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.FullName, "", new { @class = "text-danger" })
                </div>

                <div class="mb-3">
                    @Html.LabelFor(model => model.Email, new { @class = "form-label" })
                    @Html.TextBoxFor(model => model.Email, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                </div>

                <div class="mb-3">
                    <button type="submit" class="btn btn-primary w-100">Save</button>
                </div>
            }
        </div>

        <div class="text-center-container text-center">
            @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-link" })
        </div>
    </div>
</div>