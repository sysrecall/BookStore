@using BookStore.Models.Store
@model BookStore.ViewModels.EditBookViewModel

@{
    ViewBag.Title = "Edit Book";
    Layout = "~/Views/Shared/Admin/_SideNav.cshtml";
}

<style>
    .edit-book-container {
        min-height: 80vh;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .card {
        width: 100%;
        max-width: 900px;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .card-title {
        font-weight: bold;
        margin-bottom: 20px;
    }

    .card-body {
        padding: 40px;
    }

    .form-label {
        font-weight: 500;
        margin-bottom: 5px;
    }

    .form-control {
        border-radius: 5px;
        border: 1px solid #ced4da;
        padding: 10px;
        font-size: 1rem;
    }

    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
    }

    .btn-primary:hover {
        background-color: #0056b3;
    }

    .btn-link {
        color: #007bff;
        text-decoration: none;
        font-size: 0.9rem;
    }

    .btn-link:hover {
        text-decoration: underline;
    }
</style>

<div class="edit-book-container">
    <div class="card shadow-lg">
        <h3 class="card-title text-center mt-4">Edit Book</h3>

        <div class="card-body">
            @using (Html.BeginForm("EditBook", "Admin", FormMethod.Post))
            {
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.ID)

                <div class="row">
                    <div class="col-md-6 mb-3">
                        @Html.LabelFor(m => m.Title, new { @class = "form-label" })
                        @Html.TextBoxFor(m => m.Title, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Title, "", new { @class = "text-danger" })
                    </div>
                    <div class="col-md-6 mb-3">
                        @Html.LabelFor(m => m.Author, new { @class = "form-label" })
                        @Html.TextBoxFor(m => m.Author, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Author, "", new { @class = "text-danger" })
                    </div>

                    <div class="col-md-6 mb-3">
                        @Html.LabelFor(m => m.Publisher, new { @class = "form-label" })
                        @Html.TextBoxFor(m => m.Publisher, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Publisher, "", new { @class = "text-danger" })
                    </div>
                    <div class="col-md-6 mb-3">
                        @Html.LabelFor(m => m.PublicationYear, new { @class = "form-label" })
                        @Html.TextBoxFor(m => m.PublicationYear, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.PublicationYear, "", new { @class = "text-danger" })
                    </div>

                    <div class="col-md-6 mb-3">
                        @Html.LabelFor(m => m.Pages, new { @class = "form-label" })
                        @Html.TextBoxFor(m => m.Pages, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Pages, "", new { @class = "text-danger" })
                    </div>
                    <div class="col-md-6 mb-3">
                        @Html.LabelFor(m => m.Edition, new { @class = "form-label" })
                        @Html.TextBoxFor(m => m.Edition, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Edition, "", new { @class = "text-danger" })
                    </div>

                    <div class="col-md-6 mb-3">
                        @Html.LabelFor(m => m.Price, new { @class = "form-label" })
                        @Html.TextBoxFor(m => m.Price, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Price, "", new { @class = "text-danger" })
                    </div>

                    <div class="col-md-6 mb-3">
                        @Html.LabelFor(m => m.Category, new { @class = "form-label" })
                        @Html.EnumDropDownListFor(m => m.Category, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Category, "", new { @class = "text-danger" })
                    </div>

                    <div class="col-md-6 mb-3">
                        @Html.LabelFor(m => m.SelectedTypes, new { @class = "form-label d-block" })
                        @foreach (BookType type in Enum.GetValues(typeof(BookType)))
                        {
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" name="SelectedTypes" value="@type"
                                       @(Model.SelectedTypes.Contains(type) ? "checked" : "") />
                                <label class="form-check-label">@type</label>
                            </div>
                        }
                        @Html.ValidationMessageFor(m => m.SelectedTypes, "", new { @class = "text-danger" })
                    </div>

                    <div class="col-12 mb-3">
                        @Html.LabelFor(m => m.Description, new { @class = "form-label" })
                        @Html.TextAreaFor(m => m.Description, new { @class = "form-control", rows = 3 })
                        @Html.ValidationMessageFor(m => m.Description, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="mb-3 d-flex justify-content-center" style="min-width: 200px;">
                    <button type="submit" class="btn btn-primary">Save</button>
                </div>
            }
        </div>

        <div class="text-center-container text-center mb-3">
            @Html.ActionLink("Back to List", "BookIndex", null, new { @class = "btn btn-link" })
        </div>
    </div>
</div>
