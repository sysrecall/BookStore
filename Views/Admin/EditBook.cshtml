@model BookStore.Models.Store.Book

@{
    ViewBag.Title = "EditBook";
    Layout = "~/Views/Shared/Admin/_SideNav.cshtml";
}

<style>
    .edit-book-container {
        min-height: 80vh;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .card {
        width: 100%;
        max-width: 900px;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .card-title {
        font-weight: bold;
        margin-bottom: 20px;
    }

    .card-body {
        padding: 40px;
    }

    .form-label {
        font-weight: 500;
        margin-bottom: 5px;
    }

    .form-control {
        border-radius: 5px;
        border: 1px solid #ced4da;
        padding: 10px;
        font-size: 1rem;
    }

    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
    }

        .btn-primary:hover {
            background-color: #0056b3;
        }

    .btn-link {
        color: #007bff;
        text-decoration: none;
        font-size: 0.9rem;
    }

        .btn-link:hover {
            text-decoration: underline;
        }
</style>

<div class="edit-book-container">
    <div class="card shadow-lg">
        <h3 class="card-title text-center mt-4">Edit Book</h3>

        <div class="card-body">
            @using (Html.BeginForm("EditBook", "Admin", FormMethod.Post))
            {
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.ID)

                <div class="row">
                    <div class="col-md-6 mb-3">
                        @Html.LabelFor(model => model.Title, new { @class = "form-label" })
                        @Html.TextBoxFor(model => model.Title, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
                    </div>
                    <div class="col-md-6 mb-3">
                        @Html.LabelFor(model => model.Author, new { @class = "form-label" })
                        @Html.TextBoxFor(model => model.Author, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Author, "", new { @class = "text-danger" })
                    </div>

                    <div class="col-md-6 mb-3">
                        @Html.LabelFor(model => model.BookInfo.Publisher, new { @class = "form-label" })
                        @Html.TextBoxFor(model => model.BookInfo.Publisher, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.BookInfo.Publisher, "", new { @class = "text-danger" })
                    </div>
                    <div class="col-md-6 mb-3">
                        @Html.LabelFor(model => model.BookInfo.PublicationYear, new { @class = "form-label" })
                        @Html.TextBoxFor(model => model.BookInfo.PublicationYear, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.BookInfo.PublicationYear, "", new { @class = "text-danger" })
                    </div>

                    <div class="col-md-6 mb-3">
                        @Html.LabelFor(model => model.BookInfo.Pages, new { @class = "form-label" })
                        @Html.TextBoxFor(model => model.BookInfo.Pages, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.BookInfo.Pages, "", new { @class = "text-danger" })
                    </div>
                    <div class="col-md-6 mb-3">
                        @Html.LabelFor(model => model.BookInfo.Edition, new { @class = "form-label" })
                        @Html.TextBoxFor(model => model.BookInfo.Edition, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.BookInfo.Edition, "", new { @class = "text-danger" })
                    </div>

                    <div class="col-md-6 mb-3">
                        @Html.LabelFor(model => model.Price, new { @class = "form-label" })
                        @Html.TextBoxFor(model => model.Price, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Price, "", new { @class = "text-danger" })
                    </div>
                    <div class="col-md-6 mb-3">
                        @Html.LabelFor(model => model.BookInfo.AvailableTypes, new { @class = "form-label" })
                        @Html.EnumDropDownListFor(model => model.BookInfo.AvailableTypes, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.BookInfo.AvailableTypes, "", new { @class = "text-danger" })
                    </div>

                    <div class="col-12 mb-3">
                        @Html.LabelFor(model => model.BookInfo.Description, new { @class = "form-label" })
                        @Html.TextAreaFor(model => model.BookInfo.Description, new { @class = "form-control", rows = 3 })
                        @Html.ValidationMessageFor(model => model.BookInfo.Description, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="mb-3 d-flex justify-content-center " style="min-width: 200px;">
                    <button type="submit" class="btn btn-primary">Save</button>
                </div>

            }
        </div>



        <div class="text-center-container text-center mb-3">
            @Html.ActionLink("Back to List", "BookIndex", null, new { @class = "btn btn-link" })
        </div>
    </div>
</div>
