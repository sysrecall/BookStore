
@{
    ViewBag.Title = "DashBoard";
    Layout = "~/Views/Shared/Admin/_SideNav.cshtml";
}
<style>
    body {
        background-color: #f5f5f5;
    }
</style>

@{
    var totalSales = "15789.45";
    var totalSalesChange = "+12.5% from last month";
    var orders = 156;
    var ordersChange = "+5.2% from last month";
    var booksInStock = 122;
    var booksInStockChange = "+3 +2.1% from last month";
    var activeUsers = 4;
    var activeUsersChange = "+3 +8.4% from last month";
}

<div class="dashboard">
    <div class="row mb-2">
        <div class="col-3">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Total Sales</h5>
                    <p class="card-text"><i class="fa-solid fa-dollar-sign text-primary"></i> @totalSales</p>
                    <p class="card-text text-success"><i class="fa-solid fa-arrow-up text-success"></i> @totalSalesChange</p>
                </div>
            </div>
        </div>
        <div class="col-3">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Orders</h5>
                    <p class="card-text"><i class="fa-solid fa-shopping-cart text-warning"></i> @orders</p>
                    <p class="card-text text-success"><i class="fa-solid fa-arrow-up text-success"></i> @ordersChange</p>
                </div>
            </div>
        </div>
        <div class="col-3">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Books in Stock</h5>
                    <p class="card-text"><i class="fa-solid fa-book text-info"></i> @booksInStock</p>
                    <p class="card-text text-success"><i class="fa-solid fa-arrow-up text-success"></i> @booksInStockChange</p>
                </div>
            </div>
        </div>
        <div class="col-3">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Active Users</h5>
                    <p class="card-text"><i class="fa-solid fa-users text-danger"></i> @activeUsers</p>
                    <p class="card-text text-success"><i class="fa-solid fa-arrow-up text-success"></i> @activeUsersChange</p>
                </div>
            </div>
        </div>
    </div>


    <div class="row mb-2">
        <div class="col-8">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Sales Overview</h5>
                    <canvas id="monthly-sales-chart" height="100"></canvas>
                </div>
            </div>

        </div>
        <div class="col-4">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Recent Activity</h5>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item">
                            <i class="fas fa-user-plus"></i> New user registered: Emily Parker 2 hours ago
                        </li>
                        <li class="list-group-item">
                            <i class="fas fa-book-open"></i> Book stock updated: "The Great Gatsby" (+10) 3 hours ago
                        </li>
                        <li class="list-group-item">
                            <i class="fas fa-shopping-cart"></i> New order: #4385 ($124.95) 5 hours ago
                        </li>
                        <li class="list-group-item">
                            <i class="fas fa-user-cog"></i> User role updated: Michael Wilson (Editor - Admin) 1 day ago
                        </li>
                        <li class="list-group-item">
                            <i class="fas fa-book-reader"></i> New book added: "Atomic Habits" by James Clear 1 day ago
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-6">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Low Stock Items</h5>
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Title</th>
                                <th>Author</th>
                                <th>In Stock</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>Sapiens: A Brief History of Humankind</td>
                                <td>Yuval Noah Harari</td>
                                <td>12</td>
                            </tr>
                            <tr>
                                <td>Educated: A Memoir</td>
                                <td>Tara Westover</td>
                                <td>15</td>
                            </tr>
                            <tr>
                                <td>To Kill a Mockingbird</td>
                                <td>Harper Lee</td>
                                <td>18</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <div class="col-6">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Top Selling Books</h5>
                    <ol>
                        <li>The Great Gatsby (32 copies sold)</li>
                        <li>To Kill a Mockingbird (28 copies sold)</li>
                        <li>The Alchemist (25 copies sold)</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>
</div>
@section scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        const ctx = document.getElementById('monthly-sales-chart').getContext('2d');
        const salesChart = new Chart(ctx, {
            type: 'line',
            data: {
                labels: ['Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun'],
                datasets: [{
                    label: 'Monthly Sales',
                    data: [1200, 1900, 2500, 3200, 2400, 3400],
                    fill: true,
                    borderColor: '#007bff',
                    backgroundColor: 'rgba(0, 123, 255, 0.1)',
                    tension: 0.3,
                    pointBackgroundColor: '#007bff'
                }]
            },
            options: {
                responsive: true,
                scales: {
                    y: {
                        beginAtZero: true,
                        ticks: {
                            callback: function (value) {
                                return '$' + value;
                            }
                        }
                    }
                },
                plugins: {
                    legend: {
                        display: true,
                        position: 'top'
                    }
                }
            }
        });
    </script>
}