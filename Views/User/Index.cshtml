@model IEnumerable<BookStore.Models.User>

@{
    ViewBag.Title = "Users";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Users</h2>
    </div>

    <div class="card p-4">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <div class="col-md-6">
                <input type="text" class="form-control" placeholder="Search users...">
            </div>
            <a href="@Url.Action("Create")" class="btn btn-primary justify-content-be">
                <i class="bi bi-person-plus-fill"></i> Add User
            </a>
        </div>

        <table class="table table-hover">
            <thead class="table-light">
                <tr>
                    <th>Name</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    <tr>
                        <td>
                            <div class="d-flex align-items-center">
                                <div class="fw-bold">@user.Username</div>
                            </div>
                        </td>
                        <td>
                            <a href="@Url.Action("Edit", new { id = user.ID })" class="btn btn-primary me-2">
                                <i class="bi bi-pencil-square"></i> Edit
                            </a>
                            <a href="@Url.Action("Delete", new { id = user.ID })" class="btn btn-danger">
                                <i class="bi bi-trash-fill"></i> Delete
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
