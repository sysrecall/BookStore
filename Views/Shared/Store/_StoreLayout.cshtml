<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Book Haven</title>
    <style>
        .dropdown-toggle::after {
            margin-left: 0.5em;
        }
    </style>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
<nav class="navbar navbar-expand-lg navbar-light bg-light shadow-sm mb-4">
    <div class="container">
        <a class="navbar-brand fw-bold" href="@Url.Action("Index", "Home")">ðŸ“š Book Haven</a>

        <div class="d-flex ms-auto">
            @if (Session["UserID"] == null)
            {
                <a href="@Url.Action("Login", "Account")" class="nav-link text-dark me-3">Login</a>
            }
            else
            {
                <div class="dropdown me-3">
                    <a class="nav-link dropdown-toggle text-dark" role="button" id="accountDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                        My Account
                    </a>
                    <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="accountDropdown">
                        <li><a class="dropdown-item" href="@Url.Action("Index", "User")">Account Settings</a></li>
                        <li><a class="dropdown-item" href="@Url.Action("Logout", "User")">Logout</a></li>
                    </ul>
                </div>
            }
            <a href="@Url.Action("Index", "Cart")" class="nav-link text-dark position-relative">
                ðŸ›’
            </a>
        </div>
    </div>
</nav>

<div class="container body-content">
    @RenderBody()
    <hr />
    <footer class="text-center text-muted mt-4">
        <p>&copy; @DateTime.Now.Year - Book Haven</p>
    </footer>
</div>

@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")
@RenderSection("scripts", required: false)
</body>
</html>