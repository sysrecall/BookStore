@model BookStore.ViewModels.AddUserViewModel

<div class="modal fade" id="createUserModal" tabindex="-1" role="dialog" aria-labelledby="createUserModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header d-flex justify-content-between align-items-center">
                <h5 class="modal-title" id="createUserModalLabel">Create New User</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>

            <div class="modal-body">
                @using (Html.BeginForm("AddUser", "Admin", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()

                    <div class="row g-3">
                        <div class="col-md-6">
                            @Html.LabelFor(m => m.Username)
                            @Html.TextBoxFor(m => m.Username, new { @class = "form-control", placeholder = "Username" })
                        </div>

                        <div class="col-md-6">
                            @Html.LabelFor(m => m.Password)
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Password" })
                        </div>

                        <div class="col-md-6">
                            @Html.LabelFor(m => m.Role)
                            @Html.TextBoxFor(m => m.Role, new { @class = "form-control", placeholder = "User", @readonly = "User" })
                        </div>

                        <div class="col-md-6">
                            @Html.LabelFor(m => m.FullName)
                            @Html.TextBoxFor(m => m.FullName, new { @class = "form-control", placeholder = "Full Name" })
                        </div>

                        <div class="col-md-6">
                            @Html.LabelFor(m => m.Email)
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Email" })
                        </div>

                    </div>

                    <div class="form-group mt-4 text-end">
                        <button type="submit" class="btn btn-success">Create User</button>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
