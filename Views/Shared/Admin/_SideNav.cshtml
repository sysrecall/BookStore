<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <style>
        body {
            margin: 0;
            font-family: Arial, sans-serif;
        }

        .sidenav {
            height: 100%;
            width: 0;
            position: fixed;
            z-index: 999;
            top: 0;
            left: 0;
            background-color: #111111;
            overflow-x: hidden;
            transition: 0.3s;
            padding-top: 60px;
        }

            .sidenav a {
                padding: 8px 8px 8px 32px;
                text-decoration: none;
                font-size: 20px;
                color: #818181;
                display: block;
                transition: all 0.3s ease;
                position: relative;
                margin-bottom:25px;
                padding:20px 20px;
            }

                .sidenav a:not(.closebtn):not(.navbar-brand):hover {
                    color: #f1f1f1;
                    transform: translateX(10px);
                    background-color: #555555;
                }

                .sidenav a.active {
                    color: #ffffff;
                    background-color: #333;
                    font-weight: bold;
                    border-left: 4px solid #f1f1f1;
                }
                .sidenav a i {
                    margin-right: 10px;
                }


            .sidenav .closebtn {
                position: absolute;
                top: 0;
                right: 25px;
                font-size: 36px;
            }

        #main {
            padding: 16px;
            transition: all 0.3s;
            margin-top: 60px; 
        }

        .openbtn {
            font-size: 30px;
            cursor: pointer;
            background-color: transparent;
            border: none;
            color: #111;
            position: fixed;
            top: 10px;
            left: 10px;
            z-index: 1000;
        }

        .top-nav {
            background-color: #000000;
            padding: 10px 20px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            border-bottom: 1px solid #ccc;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            z-index: 999;
            transition: all 0.3s ease;
        }



            .top-nav .user-info {
                display: flex;
                align-items: center;
            }

                .top-nav .user-info .profile-pic {
                    width: 40px;
                    height: 40px;
                    border-radius: 50%;
                    margin-right: 10px;
                }

            .top-nav .logout-btn {
                background-color: transparent;
                border: none;
                color: #fff;
                cursor: pointer;
            }
        .fa-bars {
            margin-top: 90px;
        }
    </style>
</head>
<body>
    <div class="top-nav">
        <div class="text-white">
            BookStore
        </div>
        <div class="user-info">
            <img src="@Url.Action("GetProfilePicture", "Account")" alt="Profile Picture" class="profile-pic" />
            <span style="color:#f1f1f1">@ViewBag.admin</span>
        </div>
        <button class="logout-btn" onclick="location.href='@Url.Action("Logout", "Account")'">
            <i class="fa-solid fa-sign-out"></i> Logout
        </button>
    </div>

    <div id="mySidenav" class="sidenav">
        @Html.ActionLink("BookStore", "Index", "Admin", new { area = "" }, new { @class = "navbar-brand" })
        <br>
        <br>
        <a href="javascript:void(0)" class="closebtn" onclick="closeNav()">&times;</a>
        <a href="@Url.Action("Books", "Dashboard")" >
            <i class="fas fa-book"></i> Books
        </a>
        <a href="@Url.Action("Index", "Admin")" >
            <i class="fas fa-users"></i> Users
        </a>
        <a href="@Url.Action("Report","Admin")">
            <i class="fas fa-chart-line"></i> Reports
        </a>
        <a href="@Url.Action("Profile", "Account")">
            <i class="fas fa-user"></i> Profile
        </a>


    </div>

    <div id="main" class="container body-content">
        <button class="openbtn" onclick="openNav()"><i class="fa-solid fa-bars"></i></button>
        @RenderBody()
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

    <script>
        function openNav() {
            document.getElementById("mySidenav").style.width = "250px";
            const topNav = document.querySelector(".top-nav");
            topNav.style.left = "250px";
            topNav.style.width = "calc(100% - 250px)";
        }

        function closeNav() {
            document.getElementById("mySidenav").style.width = "0";
            const topNav = document.querySelector(".top-nav");
            topNav.style.left = "0";
            topNav.style.width = "100%";
        }
    </script>

</body>
</html>