@model BookStore.ViewModels.CartViewModel
@using BookStore.Models.Store

@{
    ViewBag.Title = "Checkout";
    Layout = "~/Views/Shared/Store/_StoreLayout.cshtml";
}

<div class="container mt-5">
    <h2 class="mb-4">üßæ Checkout</h2>

    @if (Model.Cart.CartItems == null || !Model.Cart.CartItems.Any())
    {
        <div class="alert alert-warning">
            Your cart is empty. Please <a href="@Url.Action("Index", "Home")">add some books</a> before checking out.
        </div>
    }
    else
    {
        <div class="row">
            <!-- Cart Summary -->
            <div class="col-md-6">
                <h4>üõí Your Items</h4>
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>Book</th>
                            <th>Qty</th>
                            <th>Price</th>
                            <th>Total</th>
                        </tr>
                    </thead>
                    <tbody>
                    @foreach (var item in Model.Cart.CartItems)
                    {
                        <tr>
                            <td>@item.Book.Title</td>
                            <td>@item.Quantity</td>
                            <td>$@item.Book.Price.ToString("0.00")</td>
                            <td>$@((item.Quantity * item.Book.Price).ToString("0.00"))</td>
                        </tr>
                    }
                    </tbody>
                    <tfoot>
                        <tr>
                            <td colspan="3" class="text-end fw-bold">Total:</td>
                            <td class="fw-bold">$@Model.TotalPrice.ToString("0.00")</td>
                        </tr>
                    </tfoot>
                </table>
            </div>

            <!-- Shipping, Billing, Payment -->
            <div class="col-md-6">
                @using (Html.BeginForm("Checkout", "Cart", FormMethod.Post))
                {
                    <h4>üì¶ Shipping Address</h4>
                    <div class="mb-3">
                        <label class="form-label">Full Name</label>
                        <input type="text" name="ShippingName" class="form-control" required
                               value="@(Model.Cart.UserID != null ? Model.Cart.User?.FullName : "")" />

                    </div>
                    <div class="mb-3">
                        <label class="form-label">Address</label>
                        <textarea name="ShippingAddress" class="form-control" rows="2" required>
                            @(Model.Cart.UserID != null ? Model.Cart.User?.ShippingAddress : "")
                            </textarea>

                    </div>

                    <h4>üí≥ Payment Method</h4>
                    <div class="mb-3">
                        <select name="PaymentMethod" class="form-select" required>
                            <option value="CreditCard">Credit Card</option>
                            <option value="DebitCard">Debit Card</option>
                        </select>
                    </div>

                    <h4>üè† Billing Address</h4>
                    <div class="mb-3 form-check">
                        <input type="checkbox" class="form-check-input" id="sameAsShipping" checked onclick="toggleBilling()">
                        <label class="form-check-label" for="sameAsShipping">Same as Shipping</label>
                    </div>
                    <div id="billingSection" style="display: none;">
                        <div class="mb-3">
                            <label class="form-label">Full Name</label>
                            <input type="text" name="BillingName" class="form-control"
                                   value="@(Model.Cart.UserID != null ? Model.Cart.User?.FullName : "")" />

                        </div>
                        <div class="mb-3">
                            <label class="form-label">Address</label>
                            <textarea name="BillingAddress" class="form-control" rows="2">
                                @(Model.Cart.UserID != null ? Model.Cart.User?.BillingAddress : "")
                                </textarea>

                        </div>
                    </div>

                    <button type="submit" class="btn btn-lg btn-success mt-3 w-100">‚úÖ Confirm & Place Order</button>
                }
            </div>
        </div>
    }
</div>

@section Scripts {
    <script>
        function toggleBilling() {
            var isChecked = document.getElementById('sameAsShipping').checked;
            document.getElementById('billingSection').style.display = isChecked ? 'none' : 'block';
        }
    </script>
}
