@model BookStore.ViewModels.CartViewModel
@using BookStore.Models.Store

@{
    ViewBag.Title = "Your Cart";
    Layout = "~/Views/Shared/Store/_StoreLayout.cshtml";
}

<div class="container mt-5">
    <h2 class="mb-4">ðŸ›’ Your Shopping Cart</h2>

    @if (Model.Books == null || !Model.Books.Any())
    {
        <div class="alert alert-info">
            Your cart is empty. <a href="@Url.Action("Index", "Home")" class="text-secondary">Browse books</a> to add some!
        </div>
    }
    else
    {
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Cover</th>
                    <th>Title</th>
                    <th>Author</th>
                    <th>Price</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var book in Model.Books)
                {
                    <tr>
                        <td style="width: 100px;">
                            <img src="@book.BookCoverImages.First().ImageURL" class="img-thumbnail" style="height: 100px;" />
                        </td>
                        <td>
                            <a href="@Url.Action("Index", "Book", new { BookID = book.ID })" class="fw-bold">
                                @book.Title
                            </a>
                        </td>
                        <td>@book.Author</td>
                        <td>$@book.Price.ToString("0.00")</td>
                        <td>
                            @using (Html.BeginForm("RemoveBook", "Cart", FormMethod.Post))
                            {
                                @Html.Hidden("UserID", Session["UserID"])
                                @Html.Hidden("BookID", book.ID)
                                <button type="submit" class="btn btn-sm btn-outline-danger">Remove</button>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <div class="d-flex justify-content-between align-items-center mt-4">
            <h4>Total: $@Model.TotalPrice.ToString("0.00")</h4>
            <a href="@Url.Action("Checkout", "Cart")" class="btn btn-success btn-lg">
                Proceed to Checkout
            </a>
        </div>
    }
</div>
