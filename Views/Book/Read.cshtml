@model BookStore.Models.Store.Book
@{
    ViewBag.Title = Model.Title;
    var pdfPath = Url.Content(Model.BookPath); // e.g. /Content/Books/test.pdf
    var encodedPdfPath = HttpUtility.UrlEncode(pdfPath); // for ?file=
    var viewerUrl = Url.Content("~/Scripts/pdfjs/web/viewer.html") + "?file=" + encodedPdfPath;
}

<iframe id="pdf-frame"
        src="@viewerUrl"
        width="100%" height="1000px"
        style="border: none;"></iframe>